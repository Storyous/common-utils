    "lint:fix": "eslint src --fix",
    "dev": "tsc --watch",
    "build": "rimraf lib && tsc",
    "prepublishOnly": "npm run build"
  },
  "mocha": {
    "recursive": true,
    "timeout": 15000,
    "exit": true
